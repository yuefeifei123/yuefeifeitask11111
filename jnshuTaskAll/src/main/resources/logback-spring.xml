    <!-- 日常开发环境下的日志配置 -->
    <springProfile name="local">
        <root level="INFO">
            <!--控制台输出-->
            <appender-ref ref="CONSOLE"/>
            <!--不用输出至文件-->
            <!--<appender-ref ref="SYSTEM_FILE" />-->
        </root>
    </springProfile>
    <!-- 线上运行的日志配置 -->
    <springProfile name="online">
        <root level="INFO">
            <!--输出至文件-->
            <appender-ref ref="SYSTEM_FILE"/>
            <!--过滤出error的内容-->
            <appender-ref ref="ERROR_FILE"/>
        </root>
    </springProfile>
</configuration>